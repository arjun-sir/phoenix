generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Gadget {
  id        String       @id @default(uuid())
  name      String
  status    GadgetStatus
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

enum GadgetStatus {
  Available
  Deployed
  Destroyed
  Decommissioned
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
